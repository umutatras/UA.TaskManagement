@model List<PriorityListDto>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Acilyet Tanımlama Ekranı";
}

<a asp-action="Create" asp-controller="Priority" asp-area="Admin">Yeni Aciliyet Durumu Ekle</a>

<table class="table table-sm mt-2">
    <thead>
        <tr>

            <th scope="col">Tanım</th>
            <th scope="col">İşlem</th>

        </tr>
    </thead>
    <tbody>
        @if (Model?.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>

                    <td>@item.Definition</td>
                    <td>
                        <a asp-action="Update" asp-controller="Priority" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Düzenle</a>
                        <a asp-action="Delete" onclick="return confirm('silmek istediğiniz emin misin ?')" class="btn btn-sm btn-primary" asp-controller="Priority" asp-area="Admin" asp-route-id="@item.Id">Sil</a>

                    </td>

                </tr>
            }
        }
        else
        {
            <tr>

                <td colspan="2">Herhangi aciliyet tanımı bulunamadı.</td>

            </tr>
        }




    </tbody>
</table>