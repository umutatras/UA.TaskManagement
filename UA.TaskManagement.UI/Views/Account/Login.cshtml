@model LoginRequest
@{
    Layout = null;
}
<html>
<head>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">

    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    <style>
        body {
            font-family: "Source Sans 3", sans-serif;
            font-optical-sizing: auto;
            font-weight: 400;
            font-style: normal;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card p-5 mt-5 w-75 mx-auto shadow">
            <div class="text-center">
                <h5>Personel Yönetim Sistemi</h5>
                <p class="lead">
                    <i> Giriş Ekranı</i>
                </p>
            </div>

            <form asp-action="Login" asp-controller="Account" asp-area="" class="form-floating mt-3" method="post">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" asp-for="Name"  placeholder="">
                    <label for="username">Kullanıcı Adı</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control" asp-for="Password"  placeholder="">
                    <label for="password">Parola</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe"  checked="@Model.RememberMe"  id="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Beni Hatırla
                    </label>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-lg btn-primary" type="submit">Giriş Yap</button>
                    <a asp-action="Register" asp-controller="Account" class="btn btn-lg btn-info">Kayıt Ol</a>
                </div>

                <div asp-validation-summary="All" class="text-danger lead">
                </div>
            </form>
        </div>


    </div>

</body>
</html>